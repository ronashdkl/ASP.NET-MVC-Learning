@model LearnMVC.ViewModel.Auth

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>



@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.username)
        @Html.EditorFor(x => x.username, String.Empty, new { @class = "form-controll" })
        @Html.ValidationMessageFor(x => x.username, String.Empty, new {@style = "color:red" })

    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.password)
        @Html.EditorFor(x => x.password, String.Empty, new { @class = "form-controll" })
        @Html.ValidationMessageFor(x => x.password, String.Empty, new { @style = "color:red" })

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info" >Login</button>
    </div>

}
